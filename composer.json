{
	"$schema": "https://getcomposer.org/schema.json",
	"name": "stilling/minecraft-rcon",
	"description": "Lightweight Minecraft RCON client supporting multi-packet responses.",
	"keywords": ["minecraft", "rcon"],
	"license": "MIT",
	"require": {
		"php": "^8.3"
	},
	"require-dev": {
		"pestphp/pest": "^4.0"
	},
	"autoload": {
		"psr-4": {
			"Stilling\\MinecraftRcon\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"scripts": {
		"test": "pest"
	},
	"config": {
		"allow-plugins": {
			"pestphp/pest-plugin": true
		}
	},
	"minimum-stability": "stable",
	"prefer-stable": true
}
